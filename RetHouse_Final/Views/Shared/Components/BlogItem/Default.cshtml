@model IEnumerable<BlogPhase>
@inject ICloudinaryService _cloudinaryService
@foreach (var item in Model)
{
    @foreach (var blog in item.Blogs)
    {
        <div class="col-md-4">
            <!-- BLOG  -->
            <div class="card__image">
                <div class="card__image-header h-250">
                    <img src="@_cloudinaryService.BuildUrl(blog.Image)" alt="" class="img-fluid w100 img-transition">
                    <div class="info"> event</div>
                </div>
                <div class="card__image-body">
                    <!-- <span class="badge badge-secondary p-1 text-capitalize mb-3">May 08, 2019 </span> -->
                    <h6 class="text-capitalize">
                        <a asp-controller="blog" asp-action="blogsingle" asp-route-Id="@item.Id" asp-route-BlogId="@blog.Id">@blog.Title </a>
                    </h6>
                    <p class=" mb-0">
                        @blog.Text.Substring(0, 100) ...

                    </p>


                </div>
                <div class="card__image-footer">
                    <figure>
                        <img src="images/profile-blog.jpg" alt="" class="img-fluid rounded-circle">
                    </figure>
                    <ul class="list-inline my-auto">
                        <li class="list-inline-item ">
                            <a href="#">
                                @item.Name
                            </a>

                        </li>

                    </ul>
                    <ul class="list-inline my-auto ml-auto">
                        <li class="list-inline-item ">
                            <a href="blog-single.html" class="btn btn-sm btn-primary ">
                                <small class="text-white ">
                                    ətraflı <i class="fa fa-angle-right ml-1"></i>
                                </small>
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
            <!-- END BLOG -->
        </div>
    }

}

