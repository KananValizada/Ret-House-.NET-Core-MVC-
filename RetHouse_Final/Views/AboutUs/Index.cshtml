@model AboutUs
@{
    ViewData["Title"] = "About Us Page";
}
<!-- BREADCRUMB -->
<div class="bg-theme-overlay">
    <section class="section__breadcrumb ">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-md-8 text-center">
                    <h2 class="text-capitalize text-white">haqqımıda</h2>
                    <ul class="list-inline ">
                        <li class="list-inline-item">
                            <a href="#" class="text-white">
                                ana səhifə
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#" class="text-white">
                                haqqımızda
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- END BREADCRUMB -->
<!-- ABOUT -->
<section class="home__about bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="title__leading">
                    <h6 class="text-uppercase text-primary mb-3">Bizə inanın</h6>
                    <h2 class="text-capitalize">@Model.Title</h2>
                    @Html.Raw(Model.Text)
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about__image">
                    <div class="about__image-top">
                        <div class="about__image-top-hover">
                            <img src="~/images/@Model.FirstImage" alt="" class="img-fluid">
                        </div>

                    </div>
                    <div class="about__image-bottom">
                        <div class="about__image-bottom-hover">
                            <img src="~/images/@Model.SecondImage" alt="" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END ABOUT -->



<section class="projects__partner ">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="title__head">
                    <h2 class="text-center text-capitalize">Digər uğurlu lahiyələrimiz</h2>
                    <p class="text-center text-capitalize">
                        Müştərilər 1985-ci ildən etibarən Daşınmaz Əmlak Tikinti üzrə böyük şirkətlərə etibar edir
                    </p>
                </div>
            </div>
        </div>
     <vc:partners></vc:partners>
    </div>
</section>

<!-- OUR TEAM -->
<section class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="title__head">
                    <h2 class="text-center text-capitalize">
                        Bizim Komanda
                    </h2>
                    <p class="text-center text-capitalize">Ayın əməkdaşları ilə tanış olun</p>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="row">
            @foreach (var item in Model.Teams)
            {
                <div class="col-md-4">
                    <div class="wrap-agent">
                        <div class="team-member">
                            <div class="team-img">
                                <img alt="team member" class="img-fluid w-100" src="~/images/@item.Image">
                            </div>
                            <div class="team-hover">
                                <div class="desk">
                                    <h5>
                                       Salam !
                                    </h5>
                                    <p>
                                       Mən @item.Profession  @item.Name
                                    </p>
                                </div>
                                <ul class="list-inline s-link mb-0">
                                    <li class="list-inline-item">
                                        <a href="#">
                                            <i class="fa fa-facebook">
                                            </i>
                                        </a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="#">
                                            <i class="fa fa-twitter">
                                            </i>
                                        </a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="#">
                                            <i class="fa fa-google-plus">
                                            </i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="team-title">
                                <h6>
                                    @item.Name
                                </h6>
                                <span>
                                    @item.Profession
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!-- END TEAM -->
