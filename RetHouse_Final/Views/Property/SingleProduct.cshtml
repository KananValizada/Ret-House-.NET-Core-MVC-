                                                            <label>Mesaj</label>
                                                            <textarea class="form-control" rows="4"></textarea>
                                                        </div>
                                                    </div>
                                                </div>

                                                <button type="submit" class="btn btn-primary float-right ">
                                                    Göndər <i class="fa fa-paper-plane ml-2"></i>
                                                </button>
                                                <!-- END COMMENT -->

                                            </div>
                                        </div>
                                        <!-- END RATE US  WRITE -->
                                    </div>
                                </div>
