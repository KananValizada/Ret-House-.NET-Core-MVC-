@model IEnumerable<Repository.Models.Property>
@inject ICloudinaryService _cloudinaryService
@{
    ViewData["Title"] = "Index";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Əmlaklar</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a asp-action="create" class="m-0 font-weight-bold btn btn-success">Yeni Əmlak</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Vəziyyəti</th>
                            <th>Önə çıxan</th>
                            <th>Adı</th>
                            <th>Otaq sayı</th>
                            <th>Hamam otağı</th>
                            <th>Yataq otağı</th>
                            <th>Qiymət</th>
                            <th>Ünvan</th>
                            <th>Ətraflı</th>
                            <th>Sahə</th>
                            <th>Video linki</th>
                            <th>Əmlak statusu</th>
                            <th>Əmlak növü</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Vəziyyəti</th>
                            <th>Önə çıxan</th>
                            <th>Adı</th>
                            <th>Otaq sayı</th>
                            <th>Hamam otağı</th>
                            <th>Yataq otağı</th>
                            <th>Qiymət</th>
                            <th>Ünvan</th>
                            <th>Ətraflı</th>
                            <th>Sahə</th>
                            <th>Video linki</th>
                            <th>Əmlak statusu</th>
                            <th>Əmlak növü</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @if (@item.Status)
                                {
                                    <span class="badge badge-success">Aktive</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Deaktiv</span>
                                }
                            </td>
                            <td>
                                @if (@item.IsFeatured)
                                {
                                    <span class="badge badge-success">Bəli</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Xeyr</span>
                                }
                            </td>
                            <td>@item.Name</td>
                            <td>@item.RoomCount</td>
                            <td>@item.BathCount</td>
                            <td>@item.BedCount</td>
                            <td>@item.Price₼</td>
                            <td>@item.Adress</td>
                            <td>@item.Description</td>
                            <td>@item.Area</td>
                            <td>@item.Video</td>
                            <td>@item.PropStatus</td>
                            <td>
                                @item.PropFilter
                            </td>
                            <td>
                                <a class="btn btn-info btn-circle btn-sm" asp-action="edit" asp-route-id="@item.Id">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-danger btn-circle btn-sm deleteitem" asp-action="delete" asp-route-id="@item.Id">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>